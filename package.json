{
    "name": "dpe-backend",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "nodemon src/main --exec babel-node $NODE_DEBUG_OPTION",
        "clean": "rimraf dist",
        "package": "cross-env NODE_ENV=production babel src --out-dir dist --ignore src/swagger",
        "copy": "babel src/swagger --out-dir dist/swagger --copy-files",
        "build": "npm run clean && npm run package && npm run copy",
        "run": "cross-env NODE_ENV=production node dist/main",
        "start": "npm run build && npm run run"
    },
    "dependencies": {
        "@koa/cors": "^2.2.1",
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "koa": "^2.4.1",
        "koa-bodyparser": "^4.2.0",
        "koa-router": "^7.3.0",
        "koa-static": "^4.0.2",
        "lodash": "^4.17.4",
        "moment": "^2.21.0",
        "mysql2": "^1.5.1",
        "node-xlsx": "^0.12.0",
        "sequelize": "^4.32.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-plugin-module-resolver": "^3.0.0",
        "babel-plugin-transform-export-extensions": "^6.22.0",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "cross-env": "^5.1.3",
        "gulp": "^3.9.1",
        "gulp-babel": "^7.0.1",
        "gulp-sequence": "^1.0.0",
        "mocha": "^5.0.0",
        "nodemon": "^1.14.11",
        "rimraf": "^2.6.2"
    },
    "nodemonConfig": {
        "ignore": [
            "src/swagger/*"
        ]
    }
}
